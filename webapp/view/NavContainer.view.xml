<mvc:View
	controllerName="org.ubb.books.controller.NavContainer"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<VBox
		class="sapUiSmallMargin">
        <HBox>
			<Button
				text="Show list"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p1" />
				</customData>
			</Button>
			<Button
				text="Add book"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p2" />
				</customData>
			</Button>
			<Button
				text="Update book"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p3" />
				</customData>
			</Button>
			<Button
				text="Delete book"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p4" />
				</customData>
			</Button>
			<Button
				text="Burrowed Books"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p5" />
				</customData>
			</Button>
		</HBox>

		<NavContainer
			id="navCon"
			width="98%"
			height="100em"
			class="navContainerControl sapUiSmallMarginBottom">
			<Page
				id="p1"
				title="Book section" >
                <mvc:XMLView viewName="org.ubb.books.view.BookTable"/>
			</Page>
			<Page
				id="p2"
				title="Add book" >
				<mvc:XMLView viewName="org.ubb.books.view.AddBookPage"/>
			</Page>
			<Page
				id="p3"
				title="Update book" >
				<mvc:XMLView viewName="org.ubb.books.view.UpdateBookPage"/>
			</Page>
			<Page
				id="p4"
				title="Delete book" >
				<mvc:XMLView viewName="org.ubb.books.view.DeleteBookPage"/>
			</Page>
			<Page
				id="p5"
				title="Burrowed books" >
				<mvc:XMLView viewName="org.ubb.books.view.BurrowedBookTable"/>
			</Page>
		</NavContainer>
	</VBox>
</mvc:View>
