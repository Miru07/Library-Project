<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
		<Label text="ISBN"/>
		<Input id="isbn" placeholder="Enter here isbn" maxLength="13"/>
		<Label text="Title"/>
		<Input id="title" placeholder="Enter here title"/>
		<Label text="Author"/>
		<Input id="author" placeholder="Enter here author"/>
		<Label text="Publish Date"/>
		<DatePicker id="publishedDate" displayFormat="short" change="handleChange" class="sapUiSmallMarginBottom"/>
		<Label text="Language"/>
		<Input id="language" placeholder="Enter here language"/>
		<Label text="Total Number Books"/>
		<Input id="totalBooks" placeholder="Enter here total number"/>
		<Label text="Available Number Books"/>
		<Input id="availableBooks" placeholder="Enter here available number"/>
		<Label/>
		<Button text="{i18n>updateBookButton}" type="Accept" press="handleSaveBtnBook"></Button>
</mvc:View>